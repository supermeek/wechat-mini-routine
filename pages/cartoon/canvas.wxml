<!--pages/cartoon/canvas.wxml-->
<view>
  <pulldown id="pulldown"/>
  <scroll-view class='canvas_wrapper' scroll-y>
    <image 
        class='item'
        wx:for="{{contents}}" 
        wx:for-item="item" 
        wx:key="index" 
        src='{{arr[index] ? item.url : imageDefault}}'
        lazy-load="true"
        mode="widthFix"
    ></image>
  </scroll-view>
  <pullup id="pullup"/>
</view>