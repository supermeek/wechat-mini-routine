page{
  height: 100%;
}
view{
  font-size: 0;
  height: 100%;
}
.item{
  position: relative;
  width: 100%;
  height: 700rpx;
  margin: 0;
  box-sizing: border-box;
}
.item:nth-child(3) image{
  margin-left: 40%;
}
._white{
  color: #fff;
}
._block{
  color: #000;
}
.background{
  width:60%;
}
._left .text__title,._left .text__subtitle{
  position: absolute;
  right: 20rpx;
  text-align: right;
}
._right .text__title,._right .text__subtitle{
  position: absolute;
  left: 20rpx;
  text-align: left;
}
._white .text__title{
  display: inline-block;
  background: #fff;
  color: #000;
  font-size: 30rpx;
  top: 100rpx;
  padding: 0 10px;
}
._block .text__title{
  display: inline-block;
  background: #000;
  color: #fff;
  font-size: 30rpx;
  top: 100rpx;
  padding: 0 10px;
}
.text__subtitle{
  font-size: 28rpx;
  font-weight: 200;
  display: block;
  top:180rpx;
  color: #000;
  letter-spacing: 2px;
  /* text-decoration: line-through; */
}
.white_text{
  color: #fff !important;
}
