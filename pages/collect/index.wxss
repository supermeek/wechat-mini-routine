view{
  box-sizing: border-box;
  /* background: #f8f8f8; */
}
.item-box{
  width: 750rpx;
}
.items{
  width: 750rpx;
  margin-bottom: 20px;
  background: #fff;
}
.item{
  position: relative;
  width:710rpx;
  margin-left:20rpx;
  border-bottom: 1rpx solid #eee;
  height: 160rpx;
  line-height: 160rpx;
  overflow: hidden;
}
.item_move_cover{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.inner{
  position: absolute;
  top:0;
}
.inner.txt{
  background-color: #fff;
  width: 100%;
  z-index: 5;
  /* padding:0 20rpx; */
  transition: left 0.2s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.item__title,.item__read,.item__speed{
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
}
.item__title{
  font-size: 28rpx;
  top: 20rpx;
  left: 140rpx;
}
.item__speed{
  color: #999;
  font-size: 22rpx;
  top: 90rpx;
  left: 140rpx;
}
.item__read{
  color: #ff9800;
  font-size: 22rpx;
  bottom: 55rpx;
  right: 40rpx;
}
.item__right{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  right: 0rpx;
  top: 65rpx;
}
.inner.del{
  background-color: #e64340;
  width: 180rpx;
  text-align: center;
  z-index: 4;
  right: 0;
  color: #fff
}
.item-icon{
    width: 100rpx;
    height: 120rpx;
    /* border-radius: 2px; */
    vertical-align: top;
    margin-top: 20rpx;
    margin-right: 10rpx;
