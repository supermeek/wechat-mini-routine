view{
  box-sizing: border-box;
  background: #f8f8f8;
}
.item-box{
  width: 750rpx;
}
.items{
  /* width: 100%; */
  width: 700rpx;
  margin-left:25rpx;
  margin-bottom: 20px;
  background: #fff;
  /* border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
